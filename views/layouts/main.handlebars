<body>
  <div class="navbar-fixed">
  <nav class="white">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo deep-orange-text text-darken-2 hide-on-med-and-down">drink app</a>
      <a href="#" data-target="mobile-menu" class="sidenav-trigger grey-text text-darken-3"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        {{#if loggedIn}}
        <li><a href="/my-recipes" class="grey-text text-darken-4">my recipes</a></li>
        <li><a href="/recipe/add" class="grey-text text-darken-4">add a recipe</a></li>
        <li><a href="/login" id="logout" class="grey-text text-darken-4">log out</a></li>
        {{ else }}
        <li><a href="/login" class="grey-text text-darken-4">log in</a></li>
        {{/if}}
      </ul>
    </div>
  </nav>
  </div>

  <ul class="sidenav" id="mobile-menu">
    <li><a href="/" class="grey-text text-darken-4">drink app</a></li>
    {{#if loggedIn}}
    <li><a href="/dashboard" class="grey-text text-darken-4">my recipes</a></li>
    <li><a href="/recipe/add" class="grey-text text-darken-4">add a recipe</a></li>
    <li><a href="/login" id="logout" class="grey-text text-darken-4">log out</a></li>
    {{ else }}
    <li><a href="/login" class="grey-text text-darken-4">log in</a></li>
    {{/if}}
    </li>
  </ul>

  <main class="blue-grey lighten-5">
    {{#unless no_hero}}
      {{#if big_hero }}
      <div class="hero-container valign-wrapper blue-grey darken-3" style="height: 65vh">
      {{else}}
      <div class="hero-container valign-wrapper blue-grey darken-3" style="height: 40vh">
      {{/if}}
            <div class="row hero-content-container valign-wrapper">
              <div class="hero-content col l6 s12 offset-l3 hero-title">
                <h3 class="grey-text text-lighten-5 center-align">{{ hero_eyebrow }}</h3>
                <h1 class="amber-text text-lighten-3 center-align">{{ hero_title }}</h1>
                <h3 class="grey-text text-lighten-5 center-align">{{ hero_subtitle }}</h3>
              </div>
            </div>
      </div>
    {{/unless}}

    <div class="container body-content" id="body">
      {{{ body }}}
    </div>
  </main>

